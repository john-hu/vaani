{
  "name": "Vaani",
  "description": "Firefox OS Speech Recognition Assistant",
  "version": "0.1a",
  "type" : "certified",
  "launch_path": "/index.html",
  "icons": {
    "84": "/style/icons/vaani.png",
    "126": "/style/icons/vaani@1.5.png",
    "128": "/style/icons/vaani@1.5.png",
    "142": "/style/icons/vanni@2.png",
    "189": "/style/icons/vanni@2.25.png",
    "284": "/style/icons/vanni@3.375.png"
  },
  "developer": {
    "name": "Aus Lacroix and Andr&eacute; Natal",
    "url": "https://github.com/nullaus/fxos-voice-commands"
  },
  "activities": {
    "voice-command-request": {
      "href": "index.html",
      "disposition": "inline"
    },
    "open-app": {
      "filter": {
        "type": "webapp",
        "manifest": {
          "required": true
        }
      },
      "href": "index.html"
    }
  },
  "custom_commands": [{
    "@context": "http://schema.org",
    "@type": "OpenAction",
    "object": "SoftwareApplication",
    "target": {
      "@type": "WebActivity",
      "name": "open-app",
      "data": {
        "type": "webapp",
        "manifest": "@manifest",
        "entry_point": "@entry_point"
      }
    }
  }],
  "default_locale": "en",
  "permissions": {
    "contacts": {
      "description" : "Read Contacts for Calls and SMS",
      "access": "readcreate"
    },
    "telephony": {
      "description" : "Make calls"
    },
    "webapps-manage" : {
      "description": "Read list of installed apps to enable launching them"
    },
    "audio-capture" : {
      "description" : "Audio capture for speech recognition"
    }
  }
}
